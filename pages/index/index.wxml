<!--index.wxml-->

<!-- 折线图 -->
<view class="container">
  <ec-canvas id="mychart-dom-line" canvas-id="mychart-line" ec="{{ ec }}"></ec-canvas>
</view>

<view class="cu-bar bg-white solid-bottom">
  <view class="action">
    <text class="cuIcon-title text-blue"></text>任务列表
  </view>
</view>

<!-- 任务card -->
<view class="cu-card dynamic 'no-card'" wx:for="{{taskList}}" wx:key="index" >
  <view class="cu-item shadow">
  <!-- 发布医生及发布时间 -->
    <view class="cu-list menu-avatar">
      <view class="cu-item">
        <view class="cu-avatar round lg" style="background-image:url({{item.url}});">
          <view class="cu-tag badge cuIcon-vip bg-orange"></view>
        </view>
        <view class="content flex-sub">
          <view>{{item.doctor}}</view>
          <view class="text-gray text-sm flex justify-between">
            {{item.time}}
          </view>
        </view>
      </view>
    </view>
    <!-- 任务具体信息 -->
    <view class="cu-item padding-left text-lg">
      <view class="bg-img padding-tb-xl" style="background-image: url('https://s2.loli.net/2023/04/18/nR1TuhEwjlKxIAP.png');height: 414rpx;">
        <view class="text-content margin-bottom">截止时间：{{item.ddl}}</view>
      <view class="text-content margin-bottom">任务名称：{{item.name}}</view>
      <view class="text-content margin-bottom">难易程度：{{item.diff}}</view>
      <view class="text-content margin-bottom">完成情况：{{item.done}} / {{item.all}} 天</view>
      </view>
    </view>
    <!-- 任务按钮 -->
    <view class="padding flex flex-direction bg-white" bindtap="goTo">
      <button class="cu-btn lg text-lg bg-red {{colors[item.status]}} " >
        {{btn[item.status]}}
      </button>
    </view>
  </view>
</view>





<!-- 确保tabbar不被遮挡 -->
<view class="cu-tabbar-height"></view>