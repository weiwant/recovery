<!--pages/article/index.wxml-->
<wxs src="../../utils/filter/filter.wxs" module="tools" />

<view class='container'>
  <image class='head-imagee' src='{{url}}' style="{{0==isArticle?'':'display: none;'}}" ></image>
  <video class='head-imagee' src='{{url}}' style="{{1==isArticle?'':'display: none;'}}" ></video>
  <!-- 作者信息 -->
  <view class='author-date'>
    <image class='avatar' src='https://s2.loli.net/2023/04/14/boRaWVHMzskLc6B.jpg'></image>
    <text class='author' >{{author}}</text>
    <text class='const-text'>发表于</text>
    <text class='date'>{{createTime}}</text>
  </view>
  <!-- 标题 -->
  <text class='title'>{{title}}</text>
  <!-- 工具栏 -->
  <view class='tool'>
    <view class='cicle-img'>
      <image  src='/images/share (3).png' bindtap="collectActicle"></image>
      <image class='share-img' src='/images/share (2).png'></image>
    </view>
    <view class='horizon'></view>
  </view>
  <!-- 正文 -->
  <text class='detail margin-bottom' decode="{{true}}">
    {{tools.filter_N(content)}}
  </text>
</view>
