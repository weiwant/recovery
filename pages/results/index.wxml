<!--pages/results/index.wxml-->
<image class="img" src="/images/succeed.png" mode=""/>
<view class="flex align-center">
  <text class="text-center flex-sub text-xxl">上传成功</text>
</view>
<view class="padding flex flex-direction margin-top-lg">
  <button class="cu-btn bg-green lg shadow" bindtap="getResult" data-target="Modal">查看评估结果</button>
  <button class="cu-btn bg-green lg shadow margin-top" bindtap="goToExercise">返回</button>
</view>
<view class="cu-modal {{modalName=='Modal'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">评估结果</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl text-xl">
      <view class="text-yellow text-xl text-left margin-top">
        <text class="text-black">评估结果：</text>
        <text class="text-yellow text-bold" >{{grades}}</text>
      </view>
      <view class="margin-top text-left">训练建议：{{advice}}
      </view>
    </view>
  </view>
</view>
  

