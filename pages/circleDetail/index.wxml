    <!-- 点赞状态栏 -->
    <view class="text-gray text text-right padding flex align-center">
      <text class="cuIcon-attentionfill margin-lr-xs "></text> 浏览（{{detail.views}}）
      <text class="{{1==isGood?'cuIcon-appreciatefill':'cuIcon-appreciate'}} flex-sub margin-lr-xs text-red" bindtap="change" data-isgood="{{isGood}}"></text>{{1==isGood?'已赞':'点赞'}}({{detail.stars}}) 
      <text class="cuIcon-messagefill flex-sub margin-lr-xs"></text> 评论（{{detail.comment.length}}）
      <text class="cuIcon-forwardfill flex-sub margin-lr-xs text-green"></text>转发
    </view>

    <!-- 评论区 -->
    <view class="cu-list menu-avatar comment solids-top" wx:for="{{detail.comment}}" wx:key="index">
      <view class="cu-item">
        <view class="cu-avatar round" style="background-image:url({{item.userUrl}});"></view>
        <view class="content">
          <view class="text-orange">{{item.username}}</view>
          <view class="text-black text-content text-df">
            {{item.content}}
          </view>
          <view class="grey padding-sm radius margin-top-sm text-sm"  >
          <!-- 子评论列表 -->
            <view class="flex"  wx:for="{{item.children}}" wx:for-item="children" wx:key="{{children}}">
              <view class="text-blue">{{children.username}}</view><text>:</text>
              <view class="flex-sub text-grey">{{children.cont}}</view>
            </view>
          </view>
          <view class="margin-top-sm flex justify-between text-lg">
            <view class="text-gray text-df">{{item.comment_time}}</view>
            <view>
              <!-- <text class="cuIcon-appreciatefill text-red"></text> -->
              
            </view>
          </view>
          <!-- 子评论输入 -->
          <view class="cu-bar input">
            
            <input class="solid-bottom" maxlength="300" cursor-spacing="10" placeholder="回复TA" bindinput="commentInput"></input>
            <text class="cuIcon-messagefill text-blue" bindtap="sonSay" data-commentId="{{item.id}}"> 回复 </text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

<!-- 输入框 -->
<view class="cu-bar input">
    <view class="cu-avatar round" style="background-image:url(https://s2.loli.net/2023/04/14/SfTo1UYsOCZwBM2.jpg);"></view>
    <view class="action">
      <text class="cuIcon-roundaddfill text-grey"></text>
    </view>
    <input class="solid-bottom" maxlength="300" cursor-spacing="10" placeholder="说点什么吧..." bindinput="commentInput" value="{{comment}}"></input>
    <view class="action">
      <text class="cuIcon-emojifill text-grey"></text>
    </view>
    <button class="cu-btn bg-blue shadow-blur" bindtap="say">评论</button>
  </view>
