<view class="cu-card dynamic 'no-card'">
  <view class="cu-item shadow">
    <!-- 发帖人信息 -->
    <view class="cu-list menu-avatar">
      <view class="cu-item">
      <!-- 头像 -->
        <view class="cu-avatar round lg" style="background-image:url({{userImg}});">  
        <view class="cu-tag badge cuIcon-vip bg-orange" style="{{1==isDoctor?'':'display:none;'}}" ></view>
        </view>
        <!-- 用户名及发帖时间 -->
        <view class="content flex-sub">
          <view>{{userName}}</view>
          <view class="text-gray text-sm flex justify-between">
            {{time}}
          </view>
        </view>
      </view>
    </view>
    <!-- 帖子内容 -->
    <view class="text-content" bindtap="goToDetail">
      <text decode="{{true}}">{{content}}</text>
    </view>
    <!-- 帖子图片 -->
    <view class="grid flex-sub padding-lr col-3 grid-square">
     <view class="bg-img" style="background-image:url({{item.url}});" wx:for="{{imgList}}"   wx:key="index" bindtap="showModal" data-target="Image1">
