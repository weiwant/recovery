    <!-- 点赞状态栏 -->
    <view class="text-gray text text-right padding flex align-center">
      <text class="cuIcon-attentionfill margin-lr-xs "></text> 浏览（{{view}}）
      <text class="{{1==item.isGood?'cuIcon-appreciatefill':'cuIcon-appreciate'}} flex-sub margin-lr-xs text-red" bindtap="change"></text>{{1==isGood?'已赞':'点赞'}}({{good}}) 
      <text class="cuIcon-messagefill flex-sub margin-lr-xs"></text> 评论（{{comment}}）
      <text class="cuIcon-forwardfill flex-sub margin-lr-xs text-green"></text>转发
    </view>

    <!-- 评论区 -->
    <view class="cu-list menu-avatar comment solids-top" wx:for="{{commentList}}" wx:key="index">
      <view class="cu-item">
        <view class="cu-avatar round" style="background-image:url({{item.userUrl}});"></view>
        <view class="content">
          <view class="text-orange">{{item.userName}}</view>
          <view class="text-black text-content text-df">
            {{item.content}}
          </view>
          <view class="grey padding-sm radius margin-top-sm text-sm"  >
            <view class="flex"  wx:for="{{item.children}}" wx:for-item="children" wx:key="{{children}}">
              <view class="text-blue">{{children.username}}</view>
              <view class="flex-sub text-grey">{{children.cont}}</view>
            </view>
          </view>
          <view class="margin-top-sm flex justify-between">
            <view class="text-gray text-df">{{item.time}}</view>
            <view>
              <text class="cuIcon-appreciatefill text-red"></text>
              <text class="cuIcon-messagefill text-gray margin-left-sm"></text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

<!-- 输入框 -->
<view class="cu-bar input">
    <view class="cu-avatar round" style="background-image:url(https://s2.loli.net/2023/04/14/SfTo1UYsOCZwBM2.jpg);"></view>
    <view class="action">
      <text class="cuIcon-roundaddfill text-grey"></text>
    </view>
    <input class="solid-bottom" maxlength="300" cursor-spacing="10"></input>
    <view class="action">
      <text class="cuIcon-emojifill text-grey"></text>
    </view>
    <button class="cu-btn bg-blue shadow-blur">评论</button>
  </view>
