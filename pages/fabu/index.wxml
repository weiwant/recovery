<!--pages/fabu/index.wxml-->
<!-- 标题 -->
<view class="cu-bar bg-white">
  <view class="action">
    <text class="cuIcon-title text-green"></text>
    <text>发布我的帖子</text>
  </view>
</view>
<!-- 长输入框 -->
<view class="cu-form-group margin-top solid-bottom">
  <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="分享你的故事..."></textarea>
</view>
<!-- 图片上传栏 -->
<view class="cu-bar bg-white">
  <view class="action">
    图片上传
  </view>
  <view class="action">
    {{imgList.length}}/4
  </view>
</view>
<view class="cu-form-group">
  <view class="grid col-4 grid-square flex-sub">
    <view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index]}}">
      <image src='{{imgList[index]}}' mode='aspectFill'></image>
      <!-- 删除所选图片 -->
      <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
        <text class="cuIcon-close"></text>
      </view>
    </view>
    <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
      <text class="cuIcon-cameraadd"></text>
    </view>
  </view>
</view> 

<view class="padding flex flex-direction bg-white padding">
  <button class="cu-btn lg text-lg bg-blue" bindtap="publish">发布</button>
</view>

<view class="bg-white padding-top padding-bottom padding-margin">
  <view class="bg-img padding-tb-xl" style="background-image: url('https://s2.loli.net/2023/04/18/nR1TuhEwjlKxIAP.png');height: 414rpx;"></view>
</view>

