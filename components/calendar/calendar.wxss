/* components/calendar/calendar.wxss */
/* 日历 */
.calendar-box{
  /* width: 100%; */
  box-sizing: border-box;
  padding:20rpx 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  box-shadow: #f5f5f5 0 0 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}
.calendar-day{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.day-item{
  width: 14.2%;
  color: #C5C5C5;
}
.calendar-date-box{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  text-align: center;
}
.date-item{
  width: 14.2%;
  height: 80rpx;
  position: relative;
}
.date-text{
  z-index: 9;
  line-height: 48rpx;
}
.fontbf{
  color: #fff;
  border-radius: 4em;
  background-color: #3CB285;
}
/* 过期未签到的 */
.fontbfnos{
  color: #d6d6d6;
}
.fontcur{
  color: #ffffff;
}
.fontaf{
  color: #6E6E6E;
}
.curbg,.date-text{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 48rpx;
  height: 48rpx;
}